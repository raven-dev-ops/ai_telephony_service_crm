# In-memory developer profile (no DB persistence, stubbed external services)
#
# Usage (from backend/):
#   uvicorn app.main:app --reload --env-file ..\\env.dev.inmemory
#
# This profile:
# - Uses in-memory repositories for customers/appointments/conversations.
# - Uses stub calendar and SMS providers.
# - Does NOT require tenant API keys by default (single-tenant dev).

# Core
DATABASE_URL=sqlite:///./app.db
USE_DB_CUSTOMERS=false
USE_DB_APPOINTMENTS=false
USE_DB_CONVERSATIONS=false
SESSION_STORE_BACKEND=memory

# Auth / tenancy (single-tenant dev)
REQUIRE_BUSINESS_API_KEY=false
ADMIN_API_KEY=dev-admin-key
OWNER_DASHBOARD_TOKEN=dev-owner-token

# Calendar (stub by default)
GOOGLE_CALENDAR_ID=primary
GOOGLE_CALENDAR_CREDENTIALS_FILE=
CALENDAR_USE_STUB=true

# SMS / Twilio (stub by default)
SMS_PROVIDER=stub
SMS_FROM_NUMBER=
SMS_OWNER_NUMBER=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
VERIFY_TWILIO_SIGNATURES=false

# Locale / vertical
DEFAULT_LANGUAGE_CODE=en
DEFAULT_VERTICAL=plumbing

# Voice streaming + intent tuning (staging/prod should override host)
TWILIO_STREAMING_ENABLED=true
TWILIO_STREAM_BASE_URL=wss://stream.stub.local/v1/twilio/voice-stream
TWILIO_STREAM_MIN_SECONDS=1.0
NLU_INTENT_THRESHOLD=0.4

